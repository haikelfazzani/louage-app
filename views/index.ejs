        <form action="/voyages" class="w-100 form-row" method="POST">
          <% if(locals.stations) { %>
          <div class="col-md-8">
            <select class="form-control" id="nomstation" name="nomstation">
              <% stations.forEach(s => { %>
              <option value="<%= s.nom_station %>" ><%= s.nom_station %></option>
