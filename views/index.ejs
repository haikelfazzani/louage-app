<%- include('partials/head.ejs') -%>
<%- include('partials/navbar') -%>
<div class="jumbotron container-v50">
  <div class="container mb-0 py-5">
    <div class="row">

      <div class="col-md-6 mb-3">
        <h1 class="display-4 flipInX">BIENVENUE</h1>
        <p style="color: #fff">
          Louage partout, tout le temps
          parce que votre voyage ne s’arrête pas, nous sommes toujours là pour vous.
          Notre service est simple et rapide.
          Il est facile de trouver vos voyages 
          et des cartes geographique indéquantes.
        </p>

        <form action="/voyages" class="w-100 form-row" method="POST">
          <% if(locals.stations) { %>
          <div class="col-md-8">
            <select class="form-control" id="nomstation" name="nomstation">
              <% stations.forEach(s => { %>
              <option value="<%= s.nom_station %>"><%= s.nom_station %></option>
              <% }) %>
            </select>
          </div>
          <% } %>

          <div class="col-md-4">
            <button type="submit" class="btn btn-success btn-block">rechercher</button>
          </div>
        </form>

      </div>

      <div class="col-md-6">
        <img src="img/trip.png" alt="" class="img-fluid img-front">
      </div>
    </div>

  </div>
</div>
<%- include('partials/footer.ejs') -%>