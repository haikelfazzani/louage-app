<%- include('partials/head.ejs') -%>

<div class="jumbotron container-v50 mt-3">
  <div class="container py-5">
    
    <form action="/login" method="POST" class="form-signin form-auth bg-dark w-100 mx-auto mb-2">
      <h3 class="text-center font-bold mb-3">Connexion</h3>

      <div class="form-group">
        <label for="email">Email address</label>
        <input type="text" id="email" name="email" class="form-control mb-3" placeholder="Entrer votre adresse email"
          required autofocus>
      </div>

      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="password" class="form-control"
          placeholder="Entrer votre mot de passe" required>
      </div>

      <button class="btn-submit btn btn-lg btn-primary btn-block mt-5 mb-2 font-s14" type="submit">connexion</button>

      <div><a href="/register" class="btn btn-link font-s14">Vous n'avez pas encore de compte ?</a></div>
    </form>

    <div class="alert alert-danger mx-400" id="form-signin" role="alert">alter</div>

    <% if(locals.msg) { %>
    <div class="alert alert-dark mx-400" role="alert">
      <%= msg %> <a href="/register" class="font-s14">Register</a>
    </div>
    <% } %>
    
  </div>
</div>

<script src="javascripts/validation.js" defer></script>

</body>

</html>