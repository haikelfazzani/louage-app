<% if(locals.stations) {  %>

<h2>Liste des stations</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th>chef station</th>
      <th>nom station</th>
      <th>ville</th>
      <th>tel</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
    <% stations.forEach((u, i) => {  %>
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= u.email %></td>
      <td><%= u.nom_station %></td>
      <td><%= u.ville %></td>
      <td><%= u.tel %></td>
      <td>
        <a href="#" class="btn btn-success">M</a>
        <a href="#" class="btn btn-danger">S</a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<% } %>