<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>

<div class="container py-5">
  <%- include('../navbar') -%>


  <% if(locals.stations) {  %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>chef station</th>
        <th>nom station</th>
        <th>ville</th>
        <th>tel</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      <% stations.forEach((u, i) => {  %>
      <tr>
        <td><%= i %></td>
        <% if(u.nom !== null) { %>
        <td><%= (u.nom+' ' +u.prenom) %></td> <% } else { %>
        <td><%= u.email %></td>
        <% } %>

        <td><%= u.nom_station %></td>
        <td><%= u.ville %></td>
        <td><%= u.tel %></td>
        <td>
          <a href="#" class="btn btn-success">M</a>
          <a class="btn btn-danger" id="btn-delete" href="/admin/stations/supprimer?nom=<%= u.nom_station %>">
            S
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } %>


</div>

