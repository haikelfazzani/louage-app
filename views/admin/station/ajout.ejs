<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<div class="container-fluid py-6">
  <div class="container">
    <%- include('../navbar') -%>
    <% if(locals.chefStations && locals.chefStations.length > 0) { %>
    <form action="/admin/stations/ajout" method="POST" class="form-general form-bg-gray mb-3">

      <div class="form-group">
        <label for="chef">Chef station</label>
        <select class="form-control" id="chef" name="chef">
          <% chefStations.forEach(chef => { %>
          <option value="<%= chef.id %>"><%= chef.email %></option>
          <% })%>
        </select>
      </div>

      <div class="form-group">
        <label for="nom">nom station</label>
        <input type="text" class="form-control" id="nom" name="nom" pattern="[a-zA-Z ]+"
        placeholder="Enter nom station" required>
      </div>

      <div class="form-group">
        <label for="ville">ville</label>
        <input type="text" class="form-control" id="ville" name="ville" pattern="[a-zA-Z ]+"
        placeholder="Enter ville" required>
      </div>

      <div class="form-group">
        <label for="tel">tel</label>
        <input type="tel" class="form-control" minlength="8" maxlength="8" id="tel" name="tel"
          placeholder="Enter tel station" required>
      </div>

      <button type="submit" class="btn btn-dark">Ajouter station</button>
      <button type="reset" class="btn btn-danger">vider</button>
    </form>
    <%- include('../../snackbar') -%>
    <% } %>
  </div>
</div>
<%- include('../../partials/footer.ejs') -%>