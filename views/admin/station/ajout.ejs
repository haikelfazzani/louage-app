<h2>Ajout station</h2>
<form action="/admin/station/ajout" method="POST" class="form-bg-gray">

  <div class="form-group">
    <label for="exampleFormControlSelect1">Chef station</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>


  <div class="form-group">
    <label for="nom">nom station</label>
    <input type="text" class="form-control" id="nom" name="nom" placeholder="Enter nom station" required>
  </div>

  <div class="form-group">
    <label for="ville">ville</label>
    <input type="text" class="form-control" id="ville" name="ville" placeholder="Enter ville" required>
  </div>

  <div class="form-group">
    <label for="tel">tel</label>
    <input type="text" class="form-control" id="tel" name="tel" placeholder="Enter tel station" required>
  </div>

  <button type="submit" class="btn btn-success">Ajout</button>
  <button type="reset" class="btn btn-danger">vider</button>
</form>

<% if(locals.msg) { %>
<div class="alert alert-primary" role="alert"><%= msg %></div>
<% } %>