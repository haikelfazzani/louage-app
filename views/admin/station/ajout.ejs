<% if(locals.chefStations) { %>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#stationModal">
  AJOUT STATION
</button>

<!-- Modal -->
<div class="modal fade" id="stationModal" tabindex="-1" role="dialog" aria-labelledby="stationModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="stationModalLabel">AJOUT STATION</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form action="/admin/stations/ajout" method="POST" class="form-signin form-bg-gray">

          <% chefStations.forEach(chef => { %>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Chef station</label>
            <select class="form-control" id="exampleFormControlSelect1" name="chef">
              <option value="<%= chef.id %>"><%= chef.email %></option>
            </select>
          </div>
          <% })%>


          <div class="form-group">
            <label for="nom">nom station</label>
            <input type="text" class="form-control" id="nom" name="nom" placeholder="Enter nom station" required>
          </div>

          <div class="form-group">
            <label for="ville">ville</label>
            <input type="text" class="form-control" id="ville" name="ville" placeholder="Enter ville" required>
          </div>

          <div class="form-group">
            <label for="tel">tel</label>
            <input type="text" class="form-control" id="tel" name="tel" placeholder="Enter tel station" required>
          </div>

          <button type="submit" class="btn btn-success">Ajout</button>
          <button type="reset" class="btn btn-danger">vider</button>
        </form>
      </div>
      <div class="modal-footer">
        <% if(locals.msg) { %>
        <div class="alert alert-primary" role="alert"><%= msg %></div>
        <% } %>

        <% } %>
      </div>
    </div>
  </div>
</div>