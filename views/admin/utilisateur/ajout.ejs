<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<div class="container-fluid py-6">
  <div class="container">
    <%- include('../navbar') -%>
    <form action="/admin/utilisateurs/ajout" method="POST" class="form-general form-bg-gray mb-3">

      <div class="form-group">
        <label for="nom">email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
      </div>

      <div class="form-group">
        <label for="password">password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter mot de passe"
          required>
      </div>

      <div class="form-group">
        <label for="user_role">Role d'utilisateur</label>
        <select class="form-control" id="user_role" name="role">          
          <option value="chef_station">chef_station</option>
          <option value="client">client</option>
        </select>
      </div>

      <button type="submit" class="btn btn-dark">Ajouter utilisateur</button>
      <button type="reset" class="btn btn-danger">vider</button>
    </form>
    <%- include('../../snackbar') -%>
  </div>
</div>
<%- include('../../partials/footer.ejs') -%>