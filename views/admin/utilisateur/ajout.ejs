<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  AJOUT UTILISATEUR
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">AJOUT UTILISATEUR</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form action="/admin/utilisateurs/ajout" method="POST" class="form-signin form-bg-gray">

          <div class="form-group">
            <label for="nom">email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
          </div>

          <div class="form-group">
            <label for="password">password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter mot de passe"
              required>
          </div>

          <div class="form-group">
            <label for="exampleFormControlSelect1">Role d'utilisateur</label>
            <select class="form-control" id="exampleFormControlSelect1">
              <option value="admin">admin</option>
              <option value="chef_station">chef_station</option>
              <option value="client">client</option>
            </select>
          </div>

          <button type="submit" class="btn btn-success">Ajout</button>
          <button type="reset" class="btn btn-danger">vider</button>
        </form>
      </div>

      <div class="modal-footer">
        <% if(locals.msg) { %>
        <div class="alert alert-primary" role="alert"><%= msg %></div>
        <% } %>
      </div>
    </div>
  </div>
</div>