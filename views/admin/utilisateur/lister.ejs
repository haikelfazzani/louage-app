<% if(locals.utilisateurs) {  %>

<h2>Liste des utilisateurs</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th>email</th>
      <th>role</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
    <% utilisateurs.forEach((u, i) => {  %>
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= u.email %></td>
      <td><%= u.role %></td>
      <td>
        <a href="#" class="btn btn-success">M</a>
        <a href="#" class="btn btn-danger">S</a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<% } %>
