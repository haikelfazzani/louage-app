<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<div class="container py-5">
  <%- include('../navbar') -%>

  <% if(locals.vehicules) {  %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>proprietaire</th>
          <th>nb_places</th>
          <th>num_serie</th>
          <th>tel</th>
          <th>nom_station</th>
          <th>ville</th>
          <th>action</th>
        </tr>
      </thead>
      <tbody>
        <% vehicules.forEach((u, i) => {  %>
        <tr>
          <td><%= u.proprietaire %></td>
          <td><%= u.nb_places %></td>
          <td><%= u.num_serie %></td>
          <td><%= u.tel %></td>
          <td><%= u.nom_station %></td>
          <td><%= u.ville %></td>
          <td>
            <a href="/admin/vehicules/modifier?numserie=<%= u.num_serie %>" class="btn btn-success"><i class="fas fa-pen-square"></i></a>
            <a href="/admin/vehicules/supprimer?numserie=<%= u.num_serie %>" class="btn btn-danger btn-delete"><i class="fas fa-trash-alt"></i></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>

</div>
<%- include('../../partials/footer.ejs') -%>