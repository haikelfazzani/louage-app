<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<div class="container py-5">
  <%- include('../navbar') -%>

  <% if(locals.station) { %>
  <form action="/admin/vehicules/ajout" method="POST" class="form-general form-bg-gray mb-3">

    <div class="form-group">
      <label for="proprietaire">proprietaire</label>
      <input type="text" class="form-control" id="proprietaire" name="proprietaire" placeholder="Enter proprietaire"
        required>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="numSerie">num Serie</label>
          <input type="text" class="form-control" id="numSerie" name="numSerie" placeholder="Enter numSerie" required>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="nbPlaces">nbPlaces</label>
          <input type="number" class="form-control" 
          min="1" max="9"
          id="nbPlaces" name="nbPlaces" placeholder="Enter nombre places"
            required>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="nbPlaces">tel</label>
          <input type="tel" class="form-control" 
          id="tel" name="tel" minlength="0" maxlength="8"
          placeholder="Enter tel" 
          required>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="station">station</label>
      <select class="form-control" id="station" name="station">
        <option value="<%= station.id_station %>"><%= station.nom_station %></option>
      </select>
    </div>

    <button type="submit" class="btn btn-dark">Ajouter vehicule</button>
    <button type="reset" class="btn btn-danger">vider</button>
  </form>
  <% } %>

  <%- include('../../snackbar') -%>  
</div>
<%- include('../../partials/footer.ejs') -%>