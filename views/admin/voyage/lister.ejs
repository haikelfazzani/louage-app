<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>

<div class="container py-5">
  <%- include('../navbar') -%>

  <% if(locals.voyages) {  %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>station</th>
        <th>destination</th>
        <th>heure Depart</th>
        <th>date Depart</th>
        <th>prix Place</th>
        <th>nb Places</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      <% voyages.forEach((u, i) => {  %>
      <tr>
        <td><%= i %></td>
        <td><%= u.nom_station %></td>
        <td><%= u.destination %></td>
        <td><%= u.heure_depart %>h</td>
        <td><%= u.date_depart %></td>
        <td><%= u.prix_place %> DNT</td>
        <td><%= u.nb_places %></td>
        <td>
          <button type="button" class="btn btn-success btn-dismiss" data-toggle="modal" data-target="#exampleModal">
            M
          </button>
          <a class="btn btn-danger btn-delete" href="/admin/voyages/supprimer?voyage=<%= u.id_voyage %>">S</a>
        </td>

        <%- include('modifier', {u}) -%>

      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } %>

  <script defer>
    let btnDismiss = document.querySelector('.close');

    btnDismiss.onclick = () => {
      let m = document.querySelector('.modal-backdrop')
      if (m) {
        m.style.opacity = 0        
        m.classList.remove("show")
      }
      document.getElementById('exampleModal').style.display = 'none'
    }
  </script>

</div>
<%- include('../../partials/footer.ejs') -%>