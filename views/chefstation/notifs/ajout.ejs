<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<div class="container-fluid py-6">
  <div class="container">
    <%- include('../navbar') -%>
    <form action="/chefstation/notifications/envoyer" method="POST" class="form-general bg-light p-0 mb-3">

      <div class="row">
        <div class="col-md-6">

          <div class="form-group">
            <label for="sujet">Sujet</label>
            <input type="text" class="form-control" id="sujet" name="sujet" placeholder="Entrer sujet" required>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <label for="msg">Message</label>
            <textarea class="form-control" id="msg" name="msg" rows="7" placeholder="Entrer votre message"
              required></textarea>
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-dark">Envoyer</button>
      <button type="reset" class="btn btn-danger">vider</button>
    </form>

    <%- include('../../snackbar') -%>
  </div>
</div>
<%- include('../../partials/footer.ejs') -%>