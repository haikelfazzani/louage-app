<%- include('../partials/head.ejs') -%>
<%- include('../partials/navbar') -%>
<div class="container-fluid py-5">
  <div class="container">
    <%- include('navbar') -%>
    <% if(locals.data) {
    let myData = [
    { label : 'nombre des vehicules' , l : data.vehicules.length , fa:'fas fa-car'},
    { label : 'nombre des voyages' , l : data.voyages.length , fa:'fas fa-plane-departure'},
    { label : 'nombre des reservations' , l : data.reservations.length , fa:'fas fa-suitcase'}
    ]
    %>
    <div class="row text-uppercase mb-5">
      <% myData.forEach(v => { %>
      <div class="col-md-4 text-center mb-3">
        <div class="card box-light">
          <div class="card-body">
            <h1><i class="<%= v.fa %>"></i></h1>
            <h5 class="card-title"><%= v.label  %></h5>
            <h2><%= v.l %></h2>
          </div>
        </div>
      </div>
      <% }) %>
    </div><!-- end row-->
    <div id="voyages-chart"></div>
    <script src="/javascripts/charts/apexcharts.js" defer></script>
    <script src="/javascripts/charts/chef-charts.js" defer></script>
    <% } %>
  </div>
</div>
<%- include('../partials/footer.ejs') -%>