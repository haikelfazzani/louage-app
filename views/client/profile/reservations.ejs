<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>
<section class="page-header">
  <div class="col-md-12">
    <h3>Profile</h3>
  </div>
  <div class="bread">
    <a href="/">accueil </a>
    <a href="/utilisateur/profile/password" disabled> / mot de passe </a>
  </div>
</section>

<div class="jumbotron container-v50">
  <div class="container py-5">

    <%- include('navtabs') -%>

    <div class="row">
      <%- include('avatar') -%>
      <div class="col-md-9">
        <% if(locals.reservations) {  %>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>station</th>
                <th>destination</th>
                <th>heure depart</th>
                <th>date depart</th>
                <th>nombre place</th>
                <th>total</th>
                <th>etat</th>
                <th>action</th>
              </tr>
            </thead>
            <tbody>
              <% reservations.forEach((u, i) => {  %>
              <tr>
                <td><%= i %></td>
                <td><%= u.nom_station %></td>
                <td><%= u.destination %></td>
                <td><%= u.heure_depart %> h</td>
                <td><%= locals.formatDate(u.date_depart) %></td>
                <td><%= u.nb_place_reserver %></td>
                <td><%= u.total_prix_places %></td>
                <td>
                  <span class="badge badge-dark"><%= u.etat_reservation %></span>
                </td>
                <td>
                  <% if(u.etat_reservation === 'payer' && Date.parse(u.date_depart) > Date.parse(new Date())) { %>
                  <a href="/reservations/annuler?r=<%= u.uid_reservation %>" class="btn btn-danger btn-cancel">A</a>
                  <% } %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div><!--end table-->
        <% } %>
      </div>
    </div><!-- end row-->

  </div>
</div>
<%- include('../../partials/footer.ejs') -%>