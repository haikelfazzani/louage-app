<%- include('../../partials/head.ejs') -%>
<%- include('../../partials/navbar') -%>

<%- include('../../partials/section',{ title:'Mon Compte' , sub:'mot de passe'}) -%>

<div class="container py-5">
  <%- include('navtabs') -%>

  <div class="row">
    <%- include('avatar') -%>

    <% if(locals.userInfo) { %>
    <div class="col-md-9">
      <form action="/utilisateur/profile/password" method="POST" class="bg-light p-0 mb-3" id="form-pass">

        <div class="form-group">
          <label for="password">mot de passe</label>
          <input type="password" class="form-control" name="password" id="password" pattern="[A-Za-z0-9 #-]{6,}"
            title="Au minimul 6 letters : letters, nombres, charactere spéciaux : # _ -" placeholder="Entrer password"
            required>
        </div>

        <div class="form-group mb-4">
          <label for="conf-password">confirmer mot de passe</label>
          <input type="password" class="form-control" name="confpassword" id="confpassword" pattern="[A-Za-z0-9 #-]{6,}"
            title="Au minimul 6 letters : letters, nombres, charactere spéciaux : # _ -"
            placeholder="confirmer password" required>
        </div>

        <button type="submit" class="btn btn-dark" id="btn-submit-pass">mettre à jour</button>
        <button type="reset" class="btn btn-danger">vider</button>
      </form>

      <div class="alert alert-danger" id="alert-pass" role="alert" style="display: none">alter</div>

      <%- include('../../snackbar') -%>
    </div>
    <% } %>
  </div><!-- end row -->
</div>
<%- include('../../partials/footer.ejs') -%>