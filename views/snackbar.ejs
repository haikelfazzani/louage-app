<style>
  #snackbar {
    visibility: hidden;
    background-color: #dc3545;
    color: #fff;
    text-align: center;
    border-radius: 2px;
    padding: 16px;
    position: fixed;
    z-index: 1;
    width: 100%;
    left: 0;
    bottom: 0;
    cursor: pointer;
    transition: background-color .4s ease;
  }

  #snackbar:hover {
    background-color: #1f2532;
  }

  #snackbar.show {
    visibility: visible;
    -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
    animation: fadein 0.5s, fadeout 0.5s 2.5s;
  }

  @-webkit-keyframes fadein {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @keyframes fadein {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @-webkit-keyframes fadeout {
    from {
      opacity: 1;
    }

    to {
      opacity: 0;
    }
  }

  @keyframes fadeout {
    from {
      opacity: 1;
    }

    to {
      opacity: 0;
    }
  }
</style>

<% if(locals.msg) { %><div id="snackbar" class="show"><%= msg %></div><% } %>
<script defer>
  let snackBar = document.getElementById('snackbar')
  if (snackBar) {
    snackBar.onclick = () => { snackBar.classList.remove('show') }
  }
</script>