<%- include('partials/head.ejs') -%>

  <div class="container d-flex flex-column align-items-center py-5">

    <div class="d-flex flex-column align-items-center mb-3">
      <img src="/img/log.svg" class="flipInX" alt="" width="200">
    </div>

    <form action="/register" method="POST" class="form-signin w-100 mx-auto mb-2" style="max-width: 400px">

      <div class="form-group">
        <label for="email">Email address</label>
        <input type="text" id="email" name="email" class="form-control mb-3" placeholder="Entrer votre adresse email"
          required autofocus>
      </div>

      <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="password" class="form-control"
          placeholder="Entrer votre mot de passe" required>
      </div>

      <div class="form-group form-check">
        En créant votre compte vous acceptez nos conditions d'utilisation et notre politique de confidentialité
      </div>

      <button class="btn btn-lg btn-primary btn-block mt-3 font-s14" type="submit">cree un compte</button>
    </form>

    <div class="alert alert-danger" id="form-signin" role="alert">alter</div>

    <% if(locals.msg) { %>
    <div class="alert alert-primary" role="alert">
      <%= msg %> <a href="/login" class="font-s14">Se connecter</a>
    </div>
    <% } %>

    <a href="/login" class="btn btn-link font-s14">Vous avez déjà un compte ?</a>

  </div>

  <script src="javascripts/validation.js" defer></script>

</body>

</html>