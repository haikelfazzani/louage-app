<%- include('../partials/head.ejs') -%>
<%- include('../partials/navbar') -%>

<section class="page-header">
  <div class="col-md-12">
    <h3>Profile</h3>
  </div>

  <div class="bread">
    <a href="/">home </a>
    <a href="/user/profile" disabled> / Profile / mot de passe</a>
  </div>
</section>


<div class="jumbotron container-v50">
  <div class="container py-5">

    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link active" href="/utilisateur/profile">Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/utilisateur/profile/password">Changer password</a>
      </li>
    </ul>


    <div class="row">

      <%- include('avatar') -%>

      <% if(locals.userInfo) { %>
      <div class="col-md-8">
        <form action="/utilisateur/profile/password" method="POST" class="form-signin p-0 mb-3">

          <div class="form-group">
            <label for="password">mot de passe</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Entrer password"
              required>
          </div>

          <div class="form-group">
            <label for="conf-password">confirmer mot de passe</label>
            <input type="password" class="form-control" name="conf-password" id="conf-password"
              placeholder="confirmer password" required>
          </div>

          <button type="submit" class="btn btn-success">mettre Ã  jour</button>
          <button type="reset" class="btn btn-danger">vider</button>
        </form>

        <div class="alert alert-danger" id="form-signin" role="alert">alter</div>

        <% if(locals.msg) { %>
        <div class="alert alert-primary" role="alert"><%= msg %></div>
        <% } %>


      </div>
      <% } %>

    </div>

  </div>
</div>

